function Pacget {
  sudo pacman -S "${@}"
}

function Pacsearch {
  pacman -Ss "${@}"
}

function Pacrm {
  sudo pacman -Rsn "${@}"
}

function Pacupdate {
  sudo pacman -Syy
}

function Pacupgrade {
  sudo pacman -Syu
}

### Non-mandatory functions:
function Aurget {
  yay -S "${@}"
}

function Aursearch {
  yay -Ss "${@}"
}

function Aurrm {
  yay -Rsn "$@"
}

function Aurupdate {
  yay -Syy
}

function Aurupgrade {
  yay -Syu
}
